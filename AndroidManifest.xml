<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ianthesnake"
    android:installLocation="auto"
    android:versionCode="19"
    android:versionName="Ultimate" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
        
        <meta-data android:name="com.google.android.gms.games.APP_ID"
        android:value="@string/app_id" />
        
        <activity
            android:name="com.ianthesnake.IntroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ianthesnake.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.GameActivity"
            android:label="Game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.CPUGameActivity"
            android:label="Cpu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.OptionActivity"
            android:label="Option"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.MazeActivity"
            android:label="Maze"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.MultiplayerBluetoothClientActivity"
            android:label="Multiplayer_Client"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.MultiplayerBluetoothServerActivity"
            android:label="Multiplayer_Server"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.MultiplayerActivity"
            android:label="Multiplayer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.InfoActivity"
            android:label="Info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ianthesnake.MultiplayerServerImpostazioniActivity"
            android:label="MultiImpostazioni"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.ianthesnake.MultiplayerClientImpostazioniActivity"
            android:label="MultiImpostazioni"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
